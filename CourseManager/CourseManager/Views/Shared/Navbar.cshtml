@using CourseManager.Models;
@{
    var site=(WebsiteInfo) ViewBag.Site;
    }
            <div class="navabar navabar-inverse navaber-fixed-top">
                <div class="container">
                    <div class="navabar-header">
                        <button type="button" class="navaber-toggle" data-toggle="collapse">
                             <span class="icon-bar"></span>
                             <span class="icon-bar"></span>
                             <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink(site.SiteName, "Index", "Home", new { area = "" }, new { @class="navabar-brand"})
                </div>
                <div class="navaber-collapse collapse">
                    <ul class="nav navbar-nav">
                            @foreach (var link in site.ActionLinks)
                            {
                            <li> @Html.ActionLink(link.Name,link.Action,link.Controller )</li>
                            }
                        </ul>
                </div>
            </div>
        </div>